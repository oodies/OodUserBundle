<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--
        Resetting
    -->
    <route id="ood_user_resetting_request" methods="GET POST" path="/mot-de-passe-oublie"
           controller="Ood\UserBundle\Controller\Resetting\RequestAction">
    </route>

    <route id="ood_user_resetting_send_email" methods="GET" path="/mot-de-passe-oublie/reinitialiser"
           controller="Ood\UserBundle\Controller\Resetting\SendEmailAction">
    </route>

    <route id="ood_user_resetting_check_email" methods="GET" path="/mot-de-passe-oublie/consulter-messagerie"
           controller="Ood\UserBundle\Controller\Resetting\CheckEmailAction">
    </route>

    <route id="ood_user_resetting_reset" methods="GET POST" path="/mot-de-passe-oublie/renseigner-nouveau/{token}"
           controller="Ood\UserBundle\Controller\Resetting\ResetAction">
    </route>
</routes>

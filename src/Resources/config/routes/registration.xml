<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--
        Registration
     -->

    <route id="ood_user_registration_register" methods="GET POST" path="/inscription"
           controller="Ood\UserBundle\Controller\Registration\RegisterAction">
    </route>

    <route id="ood_user_registration_check_email" methods="GET" path="/inscription/consulter-messagerie"
           controller="Ood\UserBundle\Controller\Registration\CheckEmailAction">
    </route>

    <route id="ood_user_registration_confirm" methods="GET POST" path="/inscription/confirmer/{token}"
           controller="Ood\UserBundle\Controller\Registration\ConfirmAction">
    </route>

    <route id="ood_user_registration_confirmed" methods="GET" path="/inscription/valide"
           controller="Ood\UserBundle\Controller\Registration\ConfirmedAction">
    </route>
</routes>

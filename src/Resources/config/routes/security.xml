<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--
        Security
    -->

    <route id="ood_user_security_login" methods="GET POST" path="/connexion"
           controller="Ood\UserBundle\Controller\Security\LoginAction">
    </route>

    <route id="ood_user_security_logout" methods="GET" path="/deconnexion"
           controller="Ood\UserBundle\Controller\Security\LogoutAction" >
    </route>
</routes>

<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ood\UserBundle\Entity\User">

        <property name="username">
            <constraint name="NotBlank">
                <option name="message">user.username.not_blank</option>
                <option name="groups">
                    <value>registration</value>
                    <value>resettingRequest</value>
                    <value>edit</value>
                    <value>login</value>
                </option>
            </constraint>
            <constraint name="length">
                <option name="max">60</option>
                <option name="maxMessage">user.username.max_length</option>
                <option name="groups">
                    <value>registration</value>
                    <value>resettingRequest</value>
                    <value>edit</value>
                    <value>login</value>
                </option>
            </constraint>
        </property>

        <property name="email">
            <constraint name="NotBlank">
                <option name="message">user.email.not_blank</option>
                <option name="groups">
                    <value>registration</value>
                    <value>edit</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="message">user.email.not_valid</option>
                <option name="groups">
                    <value>registration</value>
                    <value>edit</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="max">60</option>
                <option name="maxMessage">user.email.max_length</option>
                <option name="groups">
                    <value>registration</value>
                    <value>edit</value>
                </option>
            </constraint>
        </property>
        
        <property name="password">
            <constraint name="Length">
                <option name="max">64</option>
                <option name="maxMessge">user.password.max_length</option>
            </constraint>
        </property>
        
    </class>
</constraint-mapping>

{% extends "@OodUser/Resetting/layout_step_by_step.html.twig" %}
{% trans_default_domain 'application' %}

{% block layout_step_by_step %}
    <div class="border rounded mt-4 p-3" id="step-1">
        <h2 class="mb-3">{{ 'resetting_request.title'|trans }}</h2>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate' }} ) }}
        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
            <p>{{ 'resetting_request.text'|trans }}</p>
        </div>
        <button type="submit" class="btn btn-outline-primary">{{ 'resetting_request.submit'|trans }}</button>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock layout_step_by_step %}

{% trans_default_domain 'application' %}
    <h2 class="text-center h2-responsive mb-3">{{ 'login.hook'|trans }}</h2>
    {{ form_start(form,
        {'attr' :{
            'novalidate':'novalidate' ,
            'action': path('ood_user_security_login')
        }} ) }}
    <div class="form-group">
            {{ form_label(form._username) }}
            {{ form_widget(form._username,{ 'attr': {'autofocus':'','class':'form-control','tabindex':'1' }} ) }}
        </div>
    <div class="form-group">
            {{ form_label(form._password) }}
            {{ form_widget(form._password, {'attr': {'class':'form-control','tabindex':'2' }} ) }}
        </div>
    <div class="form-group">
        {{ form_widget(form._remember_me) }}
    </div>
    <div class="alert alert-danger error" role="alert" {% if error %}style="display: block"
         {% else %}style="display: none"{% endif %}>{{ 'login.error'|trans|nl2br }}</div>
    <p><a href="{{ path('ood_user_resetting_request') }}" id="resetting-request" tabindex="4">{{ 'login.form-resetting'|trans }}</a></p>
    <div class="d-flex justify-content-end">
        <button id="form_login-submit" type="submit" class="btn btn-outline-primary"
                tabindex="3">{{ 'login.submit'|trans }}</button>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}

{% extends "@OodUser/layout.html.twig" %}
{% trans_default_domain 'application' %}

{% block content %}
    <h2 class="text-center pt-4">Connexion</h2>
    {{ form_start(form,
        {'attr' :{
            'novalidate':'novalidate' ,
            'action': path('ood_user_security_login')
        }} ) }}
    <div class="form-group row">
        {{ form_label(form._username, null, {'label_attr': {'class': 'col-sm-2 col-form-label' }} ) }}
        <div class="col-sm-10">
            {{ form_widget(form._username,{ 'attr': {'autofocus':'','tabindex':'1','class':'form-control' }} ) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form._password, null,  {'label_attr': {'class': 'col-sm-2 col-form-label' }} ) }}
        <div class="col-sm-10">
            {{ form_widget(form._password, {'attr': {'tabindex':'2','class':'form-control' }} ) }}
        </div>
    </div>
    {% if error %}
        <div class="alert-danger">{{ 'login.error'|trans|nl2br }}</div>
    {% endif %}
    <p>
        <a href="{{ path('ood_user_resetting_request') }}" id="resetting-request" tabindex="4">
            {{ 'login.form-resetting'|trans }}
        </a>
    </p>
    <div>
        <button type="submit" class="btn btn-primary" tabindex="3">
            {{ 'login.submit'|trans }}
        </button>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock content %}
